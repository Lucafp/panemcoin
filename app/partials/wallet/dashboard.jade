h1.page-header
    | Dashboard

.row
    .col-md-6
        table.table.prices-table
            tbody
                tr
                    td BTC/USD
                    td
                        strong {{ marketData.btc | number:8 }}
                tr
                    td RDD/BTC
                    td
                        strong {{ marketData.rddBtc | number:8 }}
                tr
                    td RDD/LTC
                    td
                        strong {{ marketData.rddLtc | number:8 }}
                tr
                    td Est. USD
                    td
                        strong {{ marketData.rddBtc * marketData.btc * walletOverview.balance | number:2 }}

    .col-md-6
        table.table.totals-table
            tbody
                tr
                    td Confirmed
                    td
                        strong {{ walletOverview.balance | number:8 }}
                    td RDD
                tr
                    td Unconfirmed
                    td
                        strong {{ walletOverview.unconfirmedbalance | number:8 }}
                    td RDD
                tr
                    td Staking
                    td
                        strong {{ walletOverview.stake | number:8 }}
                    td RDD
                tr
                    td Total
                    td
                        strong {{ walletOverview.balance + walletOverview.unconfirmedbalance | number:8 }}
                    td RDD


