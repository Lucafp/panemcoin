h1.page-header
    | Statistics

.row
    .col-md-6
        h3 Overview
        table.table.info-table
            tbody
                tr
                    td Confirmed Balance
                    td {{ overview.balance }}
                tr
                    td Unconfirmed Balance
                    td {{ overview.unconfirmedbalance }}
                tr
                    td Blocks
                    td {{ overview.blocks | number:0 }}
                tr
                    td Connections
                    td {{ overview.connections }}
                tr
                    td Difficulty
                    td {{ overview.difficulty }}
                tr
                    td Money Supply
                    td {{ overview.moneysupply | number:0 }}
                tr
                    td Test Net
                    td {{ overview.testnet }}
    .col-md-6
        h3 Staking
        table.table.staking-table
            tbody
                tr
                    td Stake Amount
                    td {{ overview.stake }}
                tr
                    td Average Weight
                    td {{ staking.averageweight | number:0 }}
                tr
                    td Total Weight
                    td {{ staking.totalweight | number:0 }}
                tr
                    td Net Stake Weight
                    td {{ staking.netstakeweight | number:0 }}
                tr
                    td Expected Stake Date
                    td {{ staking.expectedtime | stakedate }}
                tr
                    td Expected Stake Time
                    td {{ staking.expectedtime | staketime }}


