table.table.table-condensed
    tbody

        tr
            td.text-right Date
            td.aside-value-container {{ trans.time }}

        tr
            td.text-right Account
            td.aside-value-container {{ trans.accountLabel }}

        tr
            td.text-right Amount
            td.aside-value-container
                | {{ trans.amount }}
                span(ng-show="trans.fee > 0")
                    small
                        em {{ trans.fee }})

        tr
            td.text-right Confirmations
            td.aside-value-container {{ trans.confirmations }}

        tr
            td.text-right
                a(href="", ng-click="copy(trans.address)") Address To
            td.aside-value-container {{ trans.address }}

        tr
            td.text-right
                a(href="", ng-click="copy(trans.blockhash)") Block Hash
            td.aside-value-container
                a(href="", data-placement="top", data-animation="am-flip-x", data-trigger="click", title="Block Hash", data-content="{{ trans.blockhash }}", bs-popover)
                    | {{ trans.blockhashTrim }}

        tr
            td.text-right
                a(href="", ng-click="copy(trans.txid)") TxID
            td.aside-value-container
                a(href="", data-placement="top", data-animation="am-flip-x", bs-popover="{title: 'Transaction ID', content: trans.txid}")
                    | {{ trans.txidTrim }}